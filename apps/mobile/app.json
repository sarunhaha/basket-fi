{
  "expo": {
    "name": "Basket.fi",
    "slug": "basket-fi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.basketfi.mobile",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to securely access your DeFi portfolios",
        "NSCameraUsageDescription": "Camera access is required for QR code scanning"
      },
      "associatedDomains": [
        "applinks:basket.fi"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.basketfi.mobile",
      "permissions": [
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "CAMERA"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "basket.fi"
            },
            {
              "scheme": "basketfi"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "scheme": "basketfi",
    "plugins": [
      "expo-router",
      "expo-local-authentication",
      "expo-notifications",
      "@walletconnect/react-native-compat",
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": false
          },
          "android": {
            "newArchEnabled": false
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "basketfi"
  }
}